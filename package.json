{
  "name": "todo-back-end",
  "version": "1.0.0",
  "description": "FullStack ToDo App",
  "main": "server.js",
  "scripts": {
    "lint": "eslint .",
    "test": "exit 0",
    "start": "node server.js",
    "start:watch": "nodemon --ignore public server.js",
    "create-tables": "node data/create-tables.js",
    "drop-tables": "node data/drop-tables.js",
    "load-seed-data": "node data/load-seed-data.js",
    "recreate-tables": "npm run drop-tables && npm run create-tables",
    "setup-db": "npm run recreate-tables && npm run load-seed-data",
    "setup-db:prod": "heroku run npm run setup-db",
    "setup-heroku": "heroku addons:create heroku-postgresql:hobby-dev && heroku config:set PGSSLMODE=require"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hannahriley33/todo-back-end.git"
  },
  "author": "H Riley",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/hannahriley33/todo-back-end/issues"
  },
  "homepage": "https://github.com/hannahriley33/todo-back-end#readme",
  "dependencies": {
    "bcrypt": "^4.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.9.1",
    "pg": "^7.18.2",
    "supertest": "^4.0.2"
  },
  "devDependencies": {
    "eslint": "^6.6.0",
    "nodemon": "^1.19.4"
  }
}
